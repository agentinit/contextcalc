{
  "name": "contextcalc",
  "version": "1.0.0",
  "description": "A fast CLI tool for analyzing codebase structure and token counts for LLM context management",
  "main": "dist/cli.js",
  "module": "dist/cli.js",
  "type": "module",
  "bin": {
    "contextcalc": "./dist/cli.js"
  },
  "scripts": {
    "build": "bun build src/cli.ts --outdir dist --target node --format esm && chmod +x dist/cli.js",
    "dev": "bun run src/cli.ts",
    "test": "bun test",
    "prepublishOnly": "bun run build"
  },
  "keywords": ["cli", "tokens", "llm", "context", "codebase", "analysis"],
  "author": "Ivan",
  "license": "MIT",
  "dependencies": {
    "commander": "^12.1.0",
    "tiktoken": "^1.0.17",
    "ignore": "^5.3.2",
    "chalk": "^5.3.0"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "@types/node": "^22.5.4"
  },
  "peerDependencies": {
    "typescript": "^5"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
