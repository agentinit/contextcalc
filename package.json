{
  "name": "contextcalc",
  "version": "1.0.3",
  "description": "A fast CLI tool for analyzing codebase structure and token counts for LLM context management",
  "main": "dist/cli.js",
  "module": "dist/cli.js",
  "type": "module",
  "bin": {
    "contextcalc": "./dist/cli.js"
  },
  "scripts": {
    "build": "bun build src/cli.ts --outdir dist --target node --format esm --external tiktoken && chmod +x dist/cli.js",
    "dev": "bun run src/cli.ts",
    "test": "bun test",
    "typecheck": "bun run tsc --noEmit",
    "lint": "eslint src/ test/",
    "lint:fix": "eslint src/ test/ --fix",
    "pack": "bun run build && npm pack --dry-run",
    "prepublishOnly": "bun run build"
  },
  "keywords": [
    "cli",
    "tokens",
    "llm",
    "context",
    "codebase",
    "analysis"
  ],
  "author": "Ivan",
  "license": "MIT",
  "dependencies": {
    "commander": "^12.1.0",
    "tiktoken": "^1.0.17",
    "ignore": "^5.3.2",
    "chalk": "^5.3.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.35.0",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/git": "^10.0.1",
    "@types/bun": "latest",
    "@types/node": "^22.5.4",
    "eslint": "^9.35.0",
    "typescript-eslint": "^8.42.0"
  },
  "files": [
    "dist/"
  ],
  "peerDependencies": {
    "typescript": "^5"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
